{
  "preset_name": "Dueling Hotspots",
  "description": "Two hotspots of different temperatures placed side by side. Heat flows from the hotter spot toward the cooler one while both diffuse outward. The interplay produces an asymmetric temperature profile.",
  "plate": {
    "Lx": 2.0,
    "Ly": 1.0,
    "Nx": 200,
    "Ny": 100
  },
  "solver": {
    "alpha": 0.01,
    "dt": 0.0005,
    "t_end": 3.0
  },
  "boundary": {
    "left":   { "type": "dirichlet", "value": 0.0 },
    "right":  { "type": "dirichlet", "value": 0.0 },
    "bottom": { "type": "dirichlet", "value": 0.0 },
    "top":    { "type": "dirichlet", "value": 0.0 }
  },
  "initials": {
    "ambient_temperature": 0.0,
    "hotspots": [
      { "center": [0.6, 0.5], "radius": 0.15, "temp": 100.0 },
      { "center": [1.4, 0.5], "radius": 0.15, "temp": 50.0 }
    ]
  }
}
