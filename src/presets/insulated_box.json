{
  "preset_name": "Insulated Box",
  "description": "All four edges are insulated (Neumann g=0), so no heat can leave the plate. The hotspot diffuses until the entire plate reaches a uniform equilibrium temperature determined by conservation of energy.",
  "plate": {
    "Lx": 1.0,
    "Ly": 1.0,
    "Nx": 100,
    "Ny": 100
  },
  "solver": {
    "alpha": 0.01,
    "dt": 0.001,
    "t_end": 5.0
  },
  "boundary": {
    "left":   { "type": "neumann", "value": 0.0 },
    "right":  { "type": "neumann", "value": 0.0 },
    "bottom": { "type": "neumann", "value": 0.0 },
    "top":    { "type": "neumann", "value": 0.0 }
  },
  "initials": {
    "ambient_temperature": 20.0,
    "hotspots": [
      { "center": [0.5, 0.5], "radius": 0.15, "temp": 100.0 }
    ]
  }
}
